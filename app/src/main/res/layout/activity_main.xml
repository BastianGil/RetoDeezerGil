<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#068fcc"
    tools:context="com.example.marenjifo.retodeezerg.MainActivity">


    <EditText
        android:id="@+id/et_busqueda"
        android:layout_width="310dp"
        android:layout_height="49dp"
        android:layout_marginBottom="9dp"
        android:layout_marginEnd="1dp"
        android:ems="10"
        android:hint="Lista"
        android:inputType="textPersonName"

        app:layout_constraintBottom_toTopOf="@+id/_dynamic"
        app:layout_constraintEnd_toStartOf="@+id/ib_buqueda"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ib_atras" />

    <ImageButton
        android:id="@+id/ib_lupita"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintBottom_toTopOf="@+id/_dynamic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/et_buscar"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_search_category_default" />

    <ListView
        android:id="@+id/lv_listas"
        android:layout_width="368dp"
        android:layout_height="446dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="57dp" />

</android.support.constraint.ConstraintLayout>